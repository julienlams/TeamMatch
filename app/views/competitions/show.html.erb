<!-- app/views/competitions/show.html.erb -->
<div class="container mt-4" data-controller="join-team">
  <div class="row">
    <div class="col-md-9">
      <div class="px-4">
        <h2><%= @competition.name %></h2>
        <p><strong>Sport:</strong> <%= @competition.sport.name %></p>
        <p><strong>Nombre d'équipes:</strong> <%= @competition.teams.count %></p>
        <p><strong>Date & heure:</strong> <%= @competition.date.strftime('%d %B %Y') %> à <%= @competition.time.strftime('%H:%M') %></p>
        <p><strong>Adresse:</strong> <%= @competition.address %></p>
        <%= link_to "Retour à la liste des compétitions", competitions_path, class: "btn btn-primary" %>
      </div>

      <div class="mt-4 px-4">
        <h3>Équipes inscrites</h3>
        <ul class="list-unstyled">
          <% @competition.teams.order(created_at: :desc).each do |team| %>
            <li class="mb-3">
              <strong>Nom de l'équipe:</strong> <%= link_to team.name, user_path(team.owner_id) %><br>
              <strong>Nombre maximum de participants:</strong> <%= link_to team.number_max_of_participants, user_path(team.owner_id) %><br>
              <button class="btn btn-primary" data-action="click->join-team#openModal" data-team-id="<%= team.id %>" data-team-chatroom-url="<%= chatroom_path(team.chatroom) %>">Rejoindre</button>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="col-md-3">
      <div class="mt-4 px-4">
        <%= simple_form_for([@competition, @competition.teams.build], url: competition_teams_path(@competition), html: { class: 'form-horizontal' }) do |f| %>
          <% if @team.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</h2>
              <ul>
                <% @team.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.input :name, label: 'Nom de l\'équipe', input_html: { class: 'form-control' } %>
          </div>
          <div class="form-group">
            <%= f.input :number_max_of_participants, label: 'Nombre maximum de participants', input_html: { class: 'form-control', min: 0 } %>
          </div>
          <div class="form-group">
            <%= f.submit 'Ajouter l\'équipe', class: 'btn btn-success btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Modale pour rejoindre une équipe -->
  <div class="modal" data-join-team-target="modal">
    <div class="modal-background" data-action="click->join-team#close"></div>
    <div class="modal-content">
      <button class="modal-close is-large" aria-label="close" data-action="click->join-team#close">&times;</button>
      <div class="modal-body">
        <h3>Bienvenue dans la team !</h3>
        <p>Nous sommes ravis de vous avoir avec nous. Que l'aventure commence !</p>
        <button class="btn btn-secondary" data-action="click->join-team#close">Retour aux équipes</button>
        <button class="btn btn-primary" data-action="click->join-team#goToChatroom">Discuter avec mes équipiers</button>
      </div>
    </div>
  </div>
</div>
