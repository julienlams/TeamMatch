<div class="container mt-4">
  <div class="row">
    <!-- Section principale -->
    <div class="col-md-9">
      <div class="bg-light p-4 rounded shadow-sm">
        <h2 class="text-primary"><%= @competition.name %></h2>
        <p><strong>Sport:</strong> <%= @competition.sport.name %></p>
        <p><strong>Nombre d'équipes:</strong> <%= @competition.teams.count %></p>
        <p><strong>Date & heure:</strong> <%= @competition.date_time.strftime('%d %B %Y à %H:%M') %></p>
        <p><strong>Adresse:</strong> <%= @competition.address %></p>
        <%= link_to "Retour à la liste des compétitions", competitions_path, class: "btn btn-outline-primary  mt-3 mb-2" %>
      </div>
    </div>
    <div class="col-md-9">
      <div class="mt-4 bg-light p-4 rounded shadow-sm">
        <h3 class="text-secondary">Équipes inscrites</h3>
        <ul class="list-group list-group-flush">
          <% @competition.teams.order(created_at: :desc).each do |team| %>
            <li class="list-group-item mb-3">
              <p class="mb-1"><strong>Nom de l'équipe:</strong> <%= link_to team.name, user_path(team.owner_id), class: 'text-decoration-none' %></p>
              <p class="mb-1"><strong>Nombre maximum de participants:</strong> <%= team.number_max_of_participants %></p>
              <%= link_to 'Rejoindre', chatroom_path(team.chatroom), class: 'btn btn-primary btn-sm mt-3 mb-2' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <!-- Section pour ajouter une nouvelle équipe -->
    <div class="col-md-3 mt-4">
      <div class="bg-light p-4 rounded shadow-sm">
        <h4 class="text-success">Ajouter une équipe</h4>
        <%= simple_form_for([@competition, @competition.teams.build], url: competition_teams_path(@competition), html: { class: 'form-horizontal' }) do |f| %>
          <% if @team.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <h5><%= pluralize(@team.errors.count, "erreur") %> ont empêché l'enregistrement de l'équipe :</h5>
              <ul>
                <% @team.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.input :name, label: 'Nom de l\'équipe', input_html: { class: 'form-control' } %>
          </div>
          <div class="form-group">
            <%= f.input :number_max_of_participants, label: 'Nombre maximum de participants', input_html: { class: 'form-control', min: 0 } %>
          </div>
          <div class="form-group">
            <%= f.submit 'Ajouter l\'équipe', class: 'btn btn-success btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
